<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.AleksandraAndPawel.TransportCompany.RecipientsEntity" table="recipients" schema="systransport">
        <id name="recipientId" column="recipient_id"/>
        <property name="recipientName" column="recipient_name"/>
        <property name="recipientSurname" column="recipient_surname"/>
        <property name="recipientAddress" column="recipient_address"/>
        <property name="recipientPhoneNumber" column="recipient_phone_number"/>
        <property name="recipientCity" column="recipient_city"/>
        <set name="packagesByRecipientId" inverse="true">
            <key>
                <column name="recipient_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.AleksandraAndPawel.TransportCompany.PackagesEntity"/>
        </set>
    </class>
</hibernate-mapping>