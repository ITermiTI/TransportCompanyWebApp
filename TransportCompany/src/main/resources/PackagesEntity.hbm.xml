<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.AleksandraAndPawel.TransportCompany.PackagesEntity" table="packages" schema="systransport">
        <id name="packageId" column="package_id"/>
        <property name="packageType" column="package_type"/>
        <property name="packageStatus" column="package_status"/>
        <property name="packageWeight" column="package_weight"/>
        <property name="packagePrice" column="package_price"/>
        <property name="packagePriority" column="package_priority"/>
        <property name="packageDate" column="package_date"/>
        <property name="clientId" column="client_id"/>
        <property name="recipientId" column="recipient_id"/>
        <property name="transportId" column="transport_id"/>
        <many-to-one name="clientsByClientId" class="com.AleksandraAndPawel.TransportCompany.ClientsEntity">
            <column name="client_id"/>
        </many-to-one>
        <many-to-one name="recipientsByRecipientId" class="com.AleksandraAndPawel.TransportCompany.RecipientsEntity">
            <column name="recipient_id"/>
        </many-to-one>
        <many-to-one name="transportsByTransportId" class="com.AleksandraAndPawel.TransportCompany.TransportsEntity">
            <column name="transport_id"/>
        </many-to-one>
        <set name="reviewsByPackageId" inverse="true">
            <key>
                <column name="package_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.AleksandraAndPawel.TransportCompany.ReviewsEntity"/>
        </set>
    </class>
</hibernate-mapping>