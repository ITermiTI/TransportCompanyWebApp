<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.AleksandraAndPawel.transportcompany.model.UserAccountsEntity" table="user_accounts"
           schema="systransport">
        <id name="accountId" column="account_id"/>
        <property name="loginEmail" column="login_email"/>
        <property name="isEnabled" column="is_enabled"/>
        <property name="passwordHash" column="password_hash"/>
        <property name="dateCreated" column="date_created"/>
        <set name="clientsByAccountId" inverse="true">
            <key>
                <column name="account_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.AleksandraAndPawel.transportcompany.model.ClientsEntity"/>
        </set>
        <set name="driversByAccountId" inverse="true">
            <key>
                <column name="account_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.AleksandraAndPawel.transportcompany.model.DriversEntity"/>
        </set>
    </class>
</hibernate-mapping>