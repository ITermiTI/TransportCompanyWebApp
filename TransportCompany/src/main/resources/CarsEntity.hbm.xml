<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.AleksandraAndPawel.TransportCompany.CarsEntity" table="cars" schema="systransport">
        <id name="carId" column="car_id"/>
        <property name="carRegNumber" column="car_reg_number"/>
        <property name="carryingCapacity" column="carrying_capacity"/>
        <property name="carType" column="car_type"/>
        <property name="carStatus" column="car_status"/>
        <property name="driverId" column="driver_id"/>
        <many-to-one name="driversByDriverId" class="com.AleksandraAndPawel.TransportCompany.DriversEntity">
            <column name="driver_id" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>